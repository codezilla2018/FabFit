<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorWhite</item>
    </style>

    <style name="MycancelButton" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorWhiteTransparent</item>
    </style>
</resources>
